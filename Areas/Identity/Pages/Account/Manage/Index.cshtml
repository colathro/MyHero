@page
@model IndexModel

@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    var _user = (ApplicationUser)ViewData["USER"];
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        @if (_user.UserType == "Hero")
        {
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                <br />
                <label asp-for="Input.Location"></label>
                <input id="pac-input" asp-for="Input.Location" class="form-control" />
                <br />
                <input type="hidden" asp-for="Input.Latitude" class="form-control" id="latitude" name="latitude"/>
                <input type="hidden" asp-for="Input.Longitude" class="form-control"id="longitude" name="longitude"/>
                <label asp-for="Input.Description"></label>
                <textarea asp-for="Input.Description" class="form-control"></textarea>
                <br />
                <label asp-for="Input.Radius"></label>
                <select asp-for="Input.Radius">
                  <option value="10">10</option>
                  <option value="25">25</option>
                  <option value="50">50</option>
                  <option value="100">100</option>
                </select>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
        }
        else
        {
            <form id="profile-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Input.Location"></label>
                    <input asp-for="Input.Location" class="form-control" />
                    <br />
                    <label asp-for="Input.Description"></label>
                    <textarea asp-for="Input.Description" class="form-control"></textarea>

                    <br />
                </div>
                <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
        }
    </div>
</div>

<script src="location.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA2G0RUKlOfJna62XXwcUFbb_9eCYUTnRI&libraries=places&callback=initMap"
    async defer></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}