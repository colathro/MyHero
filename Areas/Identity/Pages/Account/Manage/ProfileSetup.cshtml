@page
@model ProfileSetupModel

@{
    ViewData["Title"] = "ProfileSetup";
    ViewData["ActivePage"] = ManageNavPages.ProfileSetup;
    var _user = (ApplicationUser)ViewData["USER"];
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
             <label asp-for="Input.Type"></label>
                    <select asp-for="Input.Type">
                      <option value="Requestor">User</option>
                      <option value="Hero">Hero</option>
                      <option value="RequestorHero">Both</option>
                    </select>
            <button id="update-profilesetup-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}